<?xml version="1.0" encoding="UTF-8"?>
<FrameLayout
		android:layout_width="fill_parent"
  		android:layout_height="fill_parent" 
  		xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView 
          android:id="@+id/HomeMenuBackground"
          android:src="@drawable/manuscreenn"
          android:adjustViewBounds="true"
          android:gravity="center_vertical"
          android:scaleType="fitXY"
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          />
    <LinearLayout android:id="@+id/linearLayout" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_gravity="top" android:layout_height="wrap_content">
	          </LinearLayout> 
    <LinearLayout android:id="@+id/linearLayouthome" android:orientation="vertical" android:layout_width="fill_parent" android:gravity="bottom" android:layout_height="fill_parent">
	       <ImageView android:layout_height="wrap_content" android:soundEffectsEnabled="false"  android:visibility="visible"
	            android:clickable="true" android:layout_gravity="left" android:layout_marginBottom = "30dp"   android:src="@drawable/logo" android:layout_width="wrap_content" android:id="@+id/logobutton"></ImageView> 
	       </LinearLayout>
    <LinearLayout android:id="@+id/linearLayouthome" android:orientation="vertical" android:layout_width="fill_parent" android:gravity="bottom" android:layout_height="fill_parent">
	       <ImageView android:layout_height="wrap_content" android:soundEffectsEnabled="false"  android:visibility="visible"  
	            android:clickable="true" android:layout_gravity="right"  android:layout_marginBottom="180dp"  android:src="@drawable/optionbutton" android:layout_width="wrap_content" android:id="@+id/optionbutton"></ImageView>
     </LinearLayout>
     
    <LinearLayout android:id="@+id/linearLayouthome" android:orientation="vertical" android:layout_width="fill_parent" android:gravity="bottom" android:layout_height="fill_parent">
	       <ImageView android:layout_height="wrap_content" android:soundEffectsEnabled="false"  android:visibility="visible"
	            android:clickable="true" android:layout_gravity="right"  android:layout_marginBottom = "100dp"  android:src="@drawable/button" android:layout_width="wrap_content" android:id="@+id/playbutton"></ImageView>
	       

     </LinearLayout>
     	      <RelativeLayout android:id="@+id/adddview" 
     	                android:orientation="vertical"
     	                
		                android:layout_width="fill_parent"
		                android:layout_height="fill_parent">

		    <ImageView         	                                                  
	                    android:id="@+id/startimage"
	                    android:adjustViewBounds="true"
                        android:paddingTop="2dp"
                        android:visibility="invisible"
                        android:layout_width="wrap_content" 
		                android:layout_height="wrap_content"></ImageView>
		    
			<ImageView      android:id="@+id/icon"	
			                android:visibility="invisible"	            
			           		android:layout_below="@+id/startimage"
		                    android:layout_width="fill_parent" 		 
		                    android:layout_height="fill_parent"
		                   
		                    android:layout_marginTop="15dp"
		                ></ImageView>

		    <TextView   android:id="@+id/text" 
		                android:layout_centerHorizontal="true"
		                android:layout_width="wrap_content"
		                android:paddingTop="200dp"
		                
			            android:layout_height="wrap_content"  		            
			            android:textColor="#FFFFFF" ></TextView>
		    </RelativeLayout>

</FrameLayout>
